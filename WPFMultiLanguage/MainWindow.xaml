<Window x:Class="WPFMultiLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMultiLanguage"
        Loaded="Window_Loaded"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="gridhii">
        <StackPanel Name="stackpanel" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="{DynamicResource language}"/>
            <Label Name="labelAngu"/>
            <Button Click="Button_Click">Change</Button>
        </StackPanel>
    </Grid>
</Window>
